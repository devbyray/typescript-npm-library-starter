{
  "name": "typescript-npm-library-starter",
  "version": "1.0.0",
  "description": "Starter for a NPM package build with TypeScript goodness ðŸš€",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "prepublishOnly": "npm test && npm run lint && npm run format",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raymonschouwenaar/typescript-npm-library-starter"
  },
  "keywords": [
    "typescript",
    "javascript",
    "library",
    "npm",
    "node",
    "nodejs"
  ],
  "author": "Raymon Schouwenaar",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "cgx": "^1.10.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  }
}
